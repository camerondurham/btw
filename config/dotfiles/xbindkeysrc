## launch demu
"dmenu_run -fn Hack-16:normal -l 5"
    m:0x40 + c:65
    Mod4 + space

# launch browser
"lof /usr/lib/firefox-developer-edition/firefox"
    m:0x40 + c:45
    Mod4 + k

# launch or focus terminal
"lof alacritty\ \-e\ tmux"
    m:0x40 + c:44
    Mod4 + a

# launch or focus editor
"lof_intellij"
    m:0x40 + c:43
    Mod4 + h

# launch or focus nemo
"lof nemo"
    m:0x40 + c:40
    Mod4 + d

# launch or focus slack
"lof /usr/lib/slack/slack"
    m:0x40 + c:30
    Mod4 + u

# launch or focus slack
"lof /usr/bin/spotify"
    m:0x40 + c:56
    Mod4 + m

# increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    XF86AudioRaiseVolume

# decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# Mute microphone
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    XF86AudioMicMute

# play/pause toggle
"playerctl --player=spotify play-pause"
    XF86AudioPlay

"playerctl --player=spotify play-pause"
    XF86AudioStop

"playerctl --player=spotify next"
    XF86AudioNext


"playerctl --player=spotify previous"
    XF86AudioPrev
